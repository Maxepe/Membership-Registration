

@model Parcial2_PROGIII_110925.Models.Socio

@{
    ViewBag.Title = "Nuevo Socio";
    List<SelectListItem> items = (List<SelectListItem>)ViewBag.items;
    List<SelectListItem> itemsDeporte = (List<SelectListItem>)ViewBag.itemsDeporte;
}

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <div>
                <h4>Registro de nuevo socio</h4>
            </div>
        </div>
    </div>
</div>
@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-lg-6">
            <div class="form-horizontal">
                <div class="form-group">
                    <label class="col-sm-6 control-label">
                        Nombre
                    </label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(model => model.pNombre, htmlAttributes: new { @class = "form-control", @id = "txtNombre" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-6 control-label">
                        Apellido
                    </label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(model => model.pApellido, htmlAttributes: new { @class = "form-control", @id = "txtApellido" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-6 control-label">
                        Lista de deportes
                    </label>
                    <div class="col-sm-6">
                        @Html.DropDownList("pIdDeporte", itemsDeporte, "Seleccione deporte", htmlAttributes: new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-6 control-label">
                        Lista de tipos de documentos
                    </label>
                    <div class="col-sm-6">
                        @Html.DropDownList("pIdTipoDocumento", items, "Seleccione tipo de documento", htmlAttributes: new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-6 control-label">
                        Numero de documento
                    </label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(model => model.pNroDocumento, htmlAttributes: new { @class = "form-control", @id = "txtEdad" })
                    </div>
                </div>
                <div class="form-group text-center">
                    <div class="col-xs-12">
                        <input class="btn btn-primary" type="submit" value="Agregar persona" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}


